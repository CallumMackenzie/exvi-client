<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.camackenzie</groupId>
    <artifactId>exvi-client</artifactId>
    <version>0.0.3</version>
    <packaging>jar</packaging>
    
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
    </properties>
    
    <repositories>
        <repository>
            <id>jitpack.io</id>
            <url>https://jitpack.io</url>
        </repository>
    </repositories>
    
    <profiles>
        <profile>
            <id>scrapers</id>
            <properties>
                <htmlunit.scope>compile</htmlunit.scope>
            </properties>
            <build>
                <resources>
                    <resource>
                        <directory>src/main/java/com/camackenzie/exvi/client/resource</directory>
                    </resource>
                </resources>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <version>2.0.2</version>
                        <configuration>
                            <excludes>
                                <exclude>com/camackenzie/exvi/client/gui/desktop/javafx/*.java</exclude>
                                <exclude>com/camackenzie/exvi/client/gui/desktop/swing/*.java</exclude>
                                <exclude>com/camackenzie/exvi/client/gui/desktop/swing/uielements/*.java</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>javafx</id>
            <properties>
                <htmlunit.scope>provided</htmlunit.scope>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.openjfx</groupId>
                    <artifactId>javafx-controls</artifactId>
                    <version>13</version>
                </dependency>
                <dependency>
                    <groupId>org.openjfx</groupId>
                    <artifactId>javafx-fxml</artifactId>
                    <version>17.0.2</version>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <version>2.0.2</version>
                        <configuration>
                            <excludes>
                                <exclude>com/camackenzie/exvi/client/model/scraping/*.java</exclude>
                                <exclude>com/camackenzie/exvi/client/gui/desktop/swing/*.java</exclude>
                                <exclude>com/camackenzie/exvi/client/gui/desktop/swing/uielements/*.java</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.openjfx</groupId>
                        <artifactId>javafx-maven-plugin</artifactId>
                        <version>0.0.4</version>
                        <configuration>
                            <mainClass>com.camackenzie.exvi.client.gui.desktop.javafx.AppRunner</mainClass>
                        </configuration>
                        <executions>
                            <execution>
                                <id>default-cli</id>
                            </execution>
                            <execution>
                                <id>debug</id>
                                <configuration>
                                    <options>
                                        <option>-agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=localhost:8000</option>
                                    </options>
                                </configuration>
                            </execution>
                            <execution>
                                <id>ide-debug</id>
                                <configuration>
                                    <options>
                                        <option>-agentlib:jdwp=transport=dt_socket,server=n,address=${jpda.address}</option>
                                    </options>
                                </configuration>
                            </execution>
                            <execution>
                                <id>ide-profile</id>
                                <configuration>
                                    <options>
                                        <option>${profiler.jvmargs.arg1}</option>
                                        <option>${profiler.jvmargs.arg2}</option>
                                        <option>${profiler.jvmargs.arg3}</option>
                                        <option>${profiler.jvmargs.arg4}</option>
                                        <option>${profiler.jvmargs.arg5}</option>
                                    </options>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
    
    <build>
        <resources>
            <resource>
                <directory>src/main/java/com/camackenzie/exvi/client/resource</directory>
            </resource>
        </resources>
    </build>

    <distributionManagement>
        <repository>
            <id>github</id>
            <name>GitHub Callum Mackenzie Apache Maven Packages</name>
            <url>https://maven.pkg.github.com/callummackenzie/exvi-client</url>
        </repository>
    </distributionManagement>
    
    <dependencies>
        <dependency>
            <groupId>com.miglayout</groupId>
            <artifactId>miglayout-javafx</artifactId>
            <version>11.0</version>
        </dependency>
        <dependency>
            <groupId>net.sourceforge.htmlunit</groupId>
            <artifactId>htmlunit</artifactId>
            <version>2.56.0</version>
            <scope>${htmlunit.scope}</scope>
        </dependency>
        <dependency>
            <groupId>com.github.CallumMackenzie</groupId>
            <artifactId>exvi-core</artifactId>
            <version>7c8cf067fb8c0bdc32c0babe20e13c351b6e928c</version>
        </dependency>    
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>2.8.9</version>
        </dependency>
    </dependencies>
</project>